<?xml version="1.0" encoding="utf-8"?>
<game.cyberpacket.com.tvfocustest.SmoothHorizontalScrollView
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:focusable="false"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/mRoot"
        android:focusable="false"
        android:clipToPadding="false"

        android:paddingLeft="@dimen/portal_default_padding_left"
        android:paddingTop="@dimen/portal_default_padding_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <game.cyberpacket.com.tvfocustest.PortalView
            android:id="@id/img1"
            style="@style/home_img_w470h310"
            android:nextFocusDown="@id/img5"
            />
        <game.cyberpacket.com.tvfocustest.PortalView
            android:id="@id/img2"
            android:layout_marginLeft="@dimen/portal_default_margin"
            android:layout_toRightOf="@+id/img1"
            style="@style/home_img_w300h470"
            android:nextFocusLeft="@id/img1"
            android:nextFocusRight="@id/img3"
            />
        <game.cyberpacket.com.tvfocustest.PortalView
            android:id="@id/img3"
            android:layout_marginLeft="@dimen/portal_default_margin"
            android:layout_toRightOf="@+id/img2"
            style="@style/home_img_w310h150"
            />
        <!--第二行-->
        <game.cyberpacket.com.tvfocustest.PortalView
            android:id="@id/img4"
            android:layout_below="@+id/img3"
            android:layout_toRightOf="@+id/img2"
            android:layout_marginTop="@dimen/portal_default_margin"
            android:layout_marginLeft="@dimen/portal_default_margin"
            style="@style/home_img_w310h150"
            />
        <!--第三行-->
        <game.cyberpacket.com.tvfocustest.PortalView
            android:id="@id/img5"
            android:layout_below="@+id/img1"
            android:layout_marginTop="@dimen/portal_default_margin"
            style="@style/home_img_w150h150"
            />
        <game.cyberpacket.com.tvfocustest.PortalView
            android:id="@id/img6"
            android:layout_below="@+id/img1"
            android:layout_toRightOf="@+id/img5"
            android:layout_marginTop="@dimen/portal_default_margin"
            android:layout_marginLeft="@dimen/portal_default_margin"
            style="@style/home_img_w150h150"
            />
        <game.cyberpacket.com.tvfocustest.PortalView
            android:id="@id/img7"
            android:layout_below="@+id/img1"
            android:layout_toRightOf="@+id/img6"
            android:layout_marginTop="@dimen/portal_default_margin"
            android:layout_marginLeft="@dimen/portal_default_margin"
            style="@style/home_img_w150h150"
            />
        <game.cyberpacket.com.tvfocustest.PortalView
            android:id="@id/img8"
            android:layout_below="@+id/img1"
            android:layout_toRightOf="@+id/img2"
            android:layout_marginTop="@dimen/portal_default_margin"
            android:layout_marginLeft="@dimen/portal_default_margin"
            style="@style/home_img_w310h150"
            />

        <game.cyberpacket.com.tvfocustest.FocusView
            android:id="@+id/mFocusView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:visibility="invisible"
            />
    </RelativeLayout>
</game.cyberpacket.com.tvfocustest.SmoothHorizontalScrollView>